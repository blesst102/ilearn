<div class="container">
<h1><%=@courses.count %> Course Listings</h1>
<%= link_to 'Add Course Listing', new_course_path, class: 'btn btn-success' %>
<div class="row align-items-center">
<% @courses.each do |course| %>
    <div class="col">
      <div class="card" style="width: 18rem;">
      <%= image_tag(image_path('elearning.jpg'), class: 'card-img-top', width: '100', height: '150')%>
        <div class="card-body">
          <p class="card-text"><%= course.title %></p>
          <p class="card-text"><%= course.description %></p>
          <p class="card-text"><%= course.created_at.strftime('%d-%b-%Y') %></p>
          <p class="card-text"><%= course.user %></p>
          <%= link_to 'Show', course, class: 'btn btn-outline-primary' %>
          <%= link_to 'Edit', edit_course_path(course), class: 'btn btn-outline-success' %>
          <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
        </div>
      </div>
    </div>
    <% end %>
  </div>

