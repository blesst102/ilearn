<body class="account-page">

		<!-- Main Wrapper -->
		<div class="main-wrapper">
			
			
			<!-- Page Content -->
			<div class="bg-pattern-style">
				<div class="content">
							
					<!-- Login Tab Content -->
					<div class="account-content">
						<div class="account-box">
							<div class="login-right">
								<div class="login-header">
									<h3>Login </h3>
									<p class="text-muted">Access to our dashboard</p>
								</div>
                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
								<form>
									<div class="form-group">
                    <%= f.input :email, required: false, autofocus: true, class: 'form-control'%>
									</div>
									<div class="form-group">
										<div class="pass-group">
                      <%= f.input :password, required: false, class: 'form-control pass-input' %>
										</div>
									</div>
									<div class="text-right">
                  
									</div>
                  <%= f.button :submit, "Log in", class: 'btn btn-primary login-btn' %>
									<div class="text-center dont-have"><%= render "devise/shared/links" %></div>
								</form>
                <% end %>
							</div>
						</div>
					</div>
					<!-- /Login Tab Content -->

				</div>

			</div>		
			<!-- /Page Content -->
		   
		</div>
</body>



